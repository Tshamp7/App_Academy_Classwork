#!/usr/bin/env ruby

class CLI
    def login_user
      p 'Please enter your email:'
      email = gets.chomp
      @current_user = User.find_by(email: email)

      if @current_user.nil?
        p 'That user doesn't exist!
        p 'Creating user...'
        @current_user = User.create!(@current)
      end
    end

    def create_url
      p 'Please enter the URL to be shortened:'
      long_url = gets.chomp
      ShortenedUrl.create!(user_id: @current_user.id,
      long_url: long_url,
      short_url: ShortenedUrl.random_code(long_url))


    end





end
